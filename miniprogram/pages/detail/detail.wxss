
.desc {
  font-size: 30rpx;
  color: #222;
  line-height: 1.5;
  padding: 28rpx;
  border-bottom: 18rpx solid #f5f5f5;
}
.addnew {
  border-bottom: 18rpx solid #f5f5f5;
  padding: 10px;
  text-align: center;
  color: #333;
  font-size: 15px;
}
.timeline {
  padding: 28rpx;
  border-bottom: 18rpx solid #f5f5f5;
}
.timeline .item:last-child .line {
  display: none;
}
.item {
  position: relative;
  padding-bottom: 40rpx;
}
.line {
  position: absolute;
  left: 0;
  height: 100%;
  border-left: 2px solid #f0f0f0;
}
.wrapper {
  position: relative;
  padding-left: 16px;
  top: -3px;
}
.date {
  margin-bottom: 8px;
  padding: 2px;
  color: #909399;
  line-height: 1;
  font-size: 13px;
  position: sticky;
  top: 0;
  background-color: rgba(255, 255, 255, .9);
  z-index: 2;
}
.date:after {
  content: "";
  position: absolute;
  top: 0;
  left: -20px;
  margin-top: 3px;
  width: 10px;
  height: 10px;
  background-color: #fff;
  border: 2px solid #1890ff;
  border-radius: 50%;
  box-sizing: border-box;
}
.content {
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
  border-radius: 4px;
  border: 1px solid #f5f5f5;
  background-color: #fff;
  overflow: hidden;
  color: #333;
  line-height: 1.5;
  box-sizing: border-box;
  padding: 16rpx 18rpx 18rpx;
  font-size: 30rpx;
}
.rich-text {
  overflow: hidden;
  word-break: break-all;
}

.comments {
  padding: 28rpx;
  padding-bottom: calc(constant(safe-area-inset-bottom) + 120rpx); 
  padding-bottom: calc(env(safe-area-inset-bottom) + 120rpx);
}
.comment-item {
  display: flex;
  align-items: flex-start;
  padding-bottom: 35rpx;
}
.comments .avatar {
  flex: none;
  width: 64rpx;
  height: 64rpx;
  background: #ccc no-repeat center;
  background-size: cover;
  margin-right: 24rpx;
  border-radius: 50%;
}
.comments .username {
  align-items: center;
  display: flex;
  font-size: 24rpx;
  color: #222;
}
.comments .username text {
  font-size: 20rpx;
  color: #999;
  padding-left: 8rpx;
}
.head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  white-space: nowrap;
}
.head .good-count {
  display: flex;
  align-items: center;
  color: #999;
  font-size: 20rpx;
}
.good-count view {
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}
.good-count text {
  margin-left: 10rpx;
}
.rotate {
  transform: rotateZ(180deg);
}
.comeon-content {
  font-size: 30rpx;
  padding: 14rpx 0;
  line-height: 1.5;
  color: #222;
}

.img-wrapper {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.img-wrapper view {
  margin: 4rpx;
  width: 193rpx;
  height: 193rpx;
  flex: none;
  background: #ccc;

}
.to-discuss {
  padding-top: 24rpx;
  display: flex;
}
.to-discuss view {
  line-height: 48rpx;
  padding: 0 16rpx;
  background: #f4f4f4;
  border-radius: 48px;
  font-size: 22rpx;
  color: #555;
}




.page-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top: 1rpx solid #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx;
  min-height: 106rpx;
  padding-bottom: constant(safe-area-inset-bottom); 
  padding-bottom: env(safe-area-inset-bottom);
}
.input {
  width: 280rpx;
  background-color: #ebebeb;
  color: #969696;
  padding: 12rpx;
  border-radius: 10rpx;
  font-size: 14px;
}
.right {
  display: flex;
}
.right > view {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #333;
  font-size: 20rpx;
  padding: 0 12rpx 0 52rpx;
  white-space: nowrap;
}