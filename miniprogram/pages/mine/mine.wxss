.wrapper {
  min-height: 100vh;
  background: #fff;
}
.user {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
}
.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.user-name {
  padding: 20rpx;
  color: #333;
  font-weight: bold;
  font-size: 34rpx;
}
.user-name text {
  padding: 20rpx;
}
.list {
  border-top: 18rpx solid #f5f5f5;
  padding: 28rpx;
}
.list navigator {
  padding: 40rpx;
  font-size: 32rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f5f5f5;
}
.list navigator:last-child {
  border: 0;
}
.user-avatar-wrapper {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #fff;
  padding: 8rpx;
  overflow: hidden;
  flex: none;
}
.user-avatar-wrapper text {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, .5);
  text-align: center;
  font-size: 18rpx;
  color: #fff;
  padding: 8rpx 0 20rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .6);
  z-index: 999;
}
.modal-wrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.modal-box {
  animation: scaleIn .3s forwards;
  background: #FFFFFF;
  width: 540rpx;
  padding: 50rpx 40rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  opacity: 0;
  transform: scale(1.1);
}
.modal-title {
  font-size: 32rpx;
  color: #222222;
  text-align: center;
  font-weight: 500;
  line-height: 38rpx;
  padding-bottom: 20rpx;
}
.input {
  padding: 12rpx;
  margin-top: 24rpx;
  width: 100%;
  background: #f5f5f5;
  color: #222;
  font-size: 30rpx;
  border-radius: 4px;
  line-height: 38rpx;
  display: block;
  height: 38rpx;
  text-align: center;
}

.btn {
  text-align: center;
  padding: 18rpx;
  color: #fff;
  background-color: #3a81f6;
  border-radius: 4px;
  margin-top: 25rpx;
}
.btn:active {
  background-color: #286ad8;
}
.cancel {
  position: absolute;
  top: 0;
  right: 0;
  padding: 18rpx;
  transform: rotateZ(45deg);
  color: #888;
}